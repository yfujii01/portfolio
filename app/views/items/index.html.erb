<h1>ポートフォリオ</h1>

<% @items.each do |item| %>
  <ul class="itemul">
    <li><%= link_to item.title, item.url, target: "_blank" %></li>
    <li><%= item.overview %></li>
    <li><%= button_to '詳細', item, method: :get %></li>

    <% if current_user != nil %>
      <li>
        <%= button_to '修正', edit_item_path(item), method: :get %>
      </li>
      <li>
        <%= button_to '削除', item, method: :delete, data: { confirm: '削除してもよろしいですか?' } %>
      </li>
    <% end %>
  </ul>
<% end %>
<br>
<% if current_user != nil %>
  <%= button_to '新規作成', new_item_path, method: :get %>
<% end %>